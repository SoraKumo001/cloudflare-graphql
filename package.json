{
  "name": "cloudflare-graphql",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:yoga": "wrangler dev --minify",
    "dev:docker": "docker compose -f docker/development/docker-compose.yml up -d",
    "development:seed": "tsx prisma/seed",
    "start": "wrangler dev",
    "prisma:generate": "prisma generate && tsx tools/fix-prisma-datamodel",
    "prisma:migrate": "prisma migrate dev && tsx tools/fix-prisma-datamodel",
    "deploy": "wrangler deploy",
    "production:prisma:migrate": "next-exec -c production -- prisma db push",
    "production:seed": "next-exec -c production -- tsx prisma/seed",
    "production:DATABASE_URL": "wrangler secret put DATABASE_URL"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251212.0",
    "@types/cookie": "^1.0.0",
    "graphql": "16.12.0",
    "next-exec": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^7.1.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-prisma": "^4.14.0",
    "@pothos/plugin-prisma-utils": "^1.3.3",
    "@prisma/adapter-pg": "7.1.0",
    "@prisma/client": "^7.1.0",
    "@prisma/pg-worker": "^6.9.0",
    "cookie": "^1.1.1",
    "graphql-yoga": "^5.17.1",
    "jose": "^6.1.3",
    "pothos-prisma-generator": "^1.3.11",
    "tsx": "^4.21.0"
  }
}
